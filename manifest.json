{
    "manifest_version": 2,
    "name": "Privacy Patrol",
    "version": "1.0",
    "description": "Privacy Patrol is a browser extension that helps you to protect your privacy.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "webNavigation",
        "contextualIdentities",
        "tabs",
        "storage",
        "cookies",
        "activeTab",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "contents/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contents/contentScript.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "contents/index.html",
        "default_icon": {
            "16": "assets/privacy-patrol-16.png",
            "48": "assets/privacy-patrol-48.png",
            "128": "assets/privacy-patrol-128.png",
            "512": "assets/privacy-patrol-512.png"
        }
    },
    "icons": {
        "16": "assets/privacy-patrol-16.png",
        "48": "assets/privacy-patrol-48.png",
        "128": "assets/privacy-patrol-128.png",
        "512": "assets/privacy-patrol-512.png"
    }
}